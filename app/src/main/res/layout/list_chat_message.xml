<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.text.Html" />

        <import type="android.view.View" />

        <variable
            name="message"
            type="ga.chrom_web.player.multiplayer.data.ChatMessage" />

        <variable
            name="topLineVisible"
            type="boolean" />

        <variable
            name="bottomLineVisible"
            type="boolean" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <View
            android:id="@+id/topLine"
            android:layout_width="4sp"
            android:layout_height="0dp"
            android:background="@{message.getColor()}"
            android:visibility="@{topLineVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@id/circleView"
            app:layout_constraintLeft_toLeftOf="@id/circleView"
            app:layout_constraintRight_toRightOf="@id/circleView"
            app:layout_constraintTop_toTopOf="parent" />

        <ga.chrom_web.player.multiplayer.CircleView
            android:id="@+id/circleView"
            android:layout_width="12sp"
            android:layout_height="12sp"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="11dp"
            app:circleColor="@{message.getColor()}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/bottomLine"
            android:layout_width="4sp"
            android:layout_height="0dp"
            android:background="@{message.getColor()}"
            android:visibility="@{bottomLineVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/circleView"
            app:layout_constraintRight_toRightOf="@id/circleView"
            app:layout_constraintTop_toBottomOf="@id/circleView" />

        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:padding="8dp"
            android:text="@{Html.fromHtml(message.getFullMessage())}"
            android:textColor="@color/chat_message_color"
            app:layout_constraintStart_toEndOf="@+id/circleView"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>