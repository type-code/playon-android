<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ga.chrom_web.player.multiplayer.ui.player.PlayerFragment">

    <data>

        <import type="android.view.View" />

        <import type="ga.chrom_web.player.multiplayer.Utils" />

        <variable
            name="isSmileKeyboardOpen"
            type="boolean" />

        <variable
            name="playerViewModel"
            type="ga.chrom_web.player.multiplayer.ui.player.PlayerViewModel" />

    </data>

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <FrameLayout
            android:id="@+id/youtubeContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvChat"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#e0e0e0"
                app:layout_constraintBottom_toTopOf="@+id/divider"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#c5c5c5"
                app:layout_constraintBottom_toTopOf="@+id/imgSmiles"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvChat" />

            <ImageButton
                android:id="@+id/imgSmiles"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="bottom"
                android:background="#d5d5d5"
                android:padding="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/kappa"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/emotesContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="@{isSmileKeyboardOpen ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toTopOf="@+id/imgSmiles"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/emotesControls"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#d5d5d5"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <Switch
                        android:id="@+id/smilesKeyboardSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvSmileHeader"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="center_vertical"
                        android:paddingEnd="8dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingStart="8dp"
                        android:text="Smiles"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/smilesKeyboardSwitch"
                        app:layout_constraintLeft_toRightOf="@+id/smilesKeyboardSwitch"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/smilesKeyboardSwitch" />
                </android.support.constraint.ConstraintLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/smilesKeyboard"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="#e0e0e0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/emotesControls" />

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>
</layout>
